/* removes white space at top of website */
body {
	margin: 0px;
}
/* creates grid */
.container {
		display: grid;
			grid-template-columns: 1fr;
}


/* navigation bar styles */
/* moves my name to right side of screen */
.nav-wrapper {
	display: flex;
	justify-content: space-between;
	padding: 38px;

}
/* moves about to the right of home */
.left-side {
	display: flex;
		
}
/* changes font to uppercase and moves it closer to center of page */
.nav-wrapper > .left-side > div {
	margin-right: 20px;
	font-size: 0.9em;
	text-transform: uppercase;
	
}
/* makes line under link invisable */
.nav-link-wrapper{
	height: 22px;
	border-bottom: 1px solid transparent;
	transition: border-bottom 0.5s:
}
/* makes text grey=(#8a8a8a) and how long it takes to turn black */
.nav-link-wrapper a {
	color: #8a8a8a;
	text-decoration: none;
	transition: color 0.5s;
	
}
/* adds line under home and about during hover */
.nav-link-wrapper:hover {
	border-bottom: 1px solid black;
}
/* turns home and about black when hovering with mouse */
.nav-link-wrapper a:hover {
	color: black;
}


/* Porfolio styles */
/* makes 3 divs in a row from left to right*/
.portfolio-items-wrapper {
	display: grid;
	grid-template-columns: 1fr 1fr 1fr;
}

.portfolio-item-wrapper {
	position: relative;
}
/* creates size of images and makes them all the same size */
.portfolio-img-background {
	height: 300px;
	width: 100%;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
/* positioning text on top of images */
.img-text-wrapper {
	position: absolute;
	top: 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 100%;
	text-align: center;
	padding-left: 100px;
	padding-right: 100px;
}

.subtitles {
	font-size: 5em;
}

/* makes font invisable */
.img-text-wrapper .subtitles {
	transition: 1s;
	color: transparent;
	font-weight: 600;
}
/* turns text white and change size when hover*/
.img-text-wrapper:hover .subtitles {
	color: white;
	font-weight: 600;
}

.img-darken {
	transition: 1s;
	filter: brightness(10%)
}


.active-nav-link {
	border-bottom: 1px solid black;
}

.active-nav-link a {
	color: black !important;
}

